<%= form_with(model: trail, class: "contents") do |form| %>
  <% if trail.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(trail.errors.count, "error") %> prohibited this trail from being saved:</h2>

      <ul class="list-disc ml-6">
        <% trail.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": trail.errors[:name].none?, "border-red-400 focus:outline-red-600": trail.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :extension_in_meters %>
    <%= form.number_field :extension_in_meters, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": trail.errors[:extension_in_meters].none?, "border-red-400 focus:outline-red-600": trail.errors[:extension_in_meters].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :elevation_gain_in_meters %>
    <%= form.number_field :elevation_gain_in_meters, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": trail.errors[:elevation_gain_in_meters].none?, "border-red-400 focus:outline-red-600": trail.errors[:elevation_gain_in_meters].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :city %>
    <%= form.text_field :city, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": trail.errors[:city].none?, "border-red-400 focus:outline-red-600": trail.errors[:city].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
